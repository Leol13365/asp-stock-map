@model StockMap.Models.Stock

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <form asp-action="Index" method="post">
        <div class="form-actions no-color row">
            <p>
                搜尋股票(請輸入股票代碼) : <input type="text" name="SearchId" value="@ViewData["CurrentFilter"]" />
                <input type="submit" value="Search" class="btn btn-default" />
            </p>
        </div>
    </form>
}

<div>
    <h4>查詢結果</h4>
    <hr />
    <h5>@ViewBag.ErroMsg</h5>
    @if (ViewBag.CheckOk == true)
    {
        <div class="row">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.StockId)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.StockId)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.StockName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.StockName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.PriceNow)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PriceNow)
                </dd>

                <dt>
                    <span title="過去一段時間的交易張數">@Html.DisplayNameFor(model => model.VolumeNow)</span>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.VolumeNow)
                </dd>

                <dt>
                    <span title="今天截至目前的交易張數">@Html.DisplayNameFor(model => model.VolumeAll)</span>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.VolumeAll)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.OpenPrice)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.OpenPrice)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.HighestPrice)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.HighestPrice)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.LowestPrice)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.LowestPrice)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ClosingPrice)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ClosingPrice)
                </dd>

                <dt>
                    <span title="相較於昨日收盤價的現價變動幅度">@Html.DisplayNameFor(model => model.Increase)</span>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Increase)%
                </dd>

                <dt>
                    <span title="相較於昨日收盤價，今日截至目前為止最高價與最低價之間的變動幅度;常用於觀察個股的活躍程度">@Html.DisplayNameFor(model => model.Amplitude)</span>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Amplitude)%
                </dd>

                <dt>
                    <span title="目前價格與昨日收盤價的價差"> @Html.DisplayNameFor(model => model.Updown)</span>
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Updown)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.FavoriteCount)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FavoriteCount)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.UpdateTime)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UpdateTime)
                </dd>

            </dl>
            <div>
                @ViewBag.Result
            </div>
        </div>
    }
</div>

<style>
    dl {
        font-size: 24px;
    }

    .dl-horizontal dt {
        width: 200px;
        margin-right: 20px;
        text-align: left;
    }

    .dl-horizontal dt:nth-child(even) {
        background-color: lightgray;
    }

    dd:nth-child(odd) {
        background-color: lightgray;
    }
</style>